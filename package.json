{
  "name": "lsf-wiki",
  "description":
    "Integration of French sign language videos into French Wikipedia.",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev":
      "concurrently --kill-others \"npm run dev:compile\" \"npm run dev:run\" --prefix name --names 'webpack,web-ext' -c 'blue,yellow' ",
    "dev:compile":
      "webpack -d --display=minimal --watch --mode=development --hide-modules",
    "dev:run":
      "web-ext run --keep-profile-changes --firefox-profile ~/.mozilla/firefox/tdvepdjn.test/ --start-url https://fr.wikipedia.org/wiki/LSF",
    "build-extension":
      "NODE_ENV=production webpack -p --progress --hide-modules"
  },
  "dependencies": {
    "vue": "^2.5.16",
    "got": "^8.3.1",
    "query-string": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "babel-loader": "^8.0.0-beta",
    "concurrently": "^3.5.1",
    "@vue/cli-plugin-babel": "^3.0.0-beta.10",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.10",
    "@vue/cli-service": "^3.0.0-beta.10",
    "vue-template-compiler": "^2.5.13",
    "web-ext": "^2.6.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
  "babel": {
    "presets": ["@vue/app"]
  },
  "eslintConfig": {
    "root": true,
    "extends": ["plugin:vue/essential", "eslint:recommended"]
  },
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:parlr/lsf-wiki.git",
  "author": "Ã‰douard Lopez <contact@edouard-lopez.com>",
  "license": "GPL-3.0"
}
